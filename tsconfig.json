{
    "compilerOptions": {
      "target": "ES2020",
      "noEmit": false,
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "moduleResolution": "node",    
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "jsx": "react",
      "forceConsistentCasingInFileNames": true,
      "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  